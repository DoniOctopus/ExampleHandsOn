<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="This is Main Activity"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1'st Player" />

        <EditText
            android:id="@+id/input_name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="2nd Player" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_tekan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6E0327"
            android:backgroundTint="#FFFFFF"
            android:text="LETS PLAY"
            app:cornerRadius="5dp" />
        <!--            android:onClick="handlePencet"-->


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>